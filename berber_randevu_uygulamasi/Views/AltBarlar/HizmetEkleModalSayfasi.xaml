<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="berber_randevu_uygulamasi.Views.AltBarlar.HizmetEkleModalSayfasi"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Hizmet Ekle"
    BackgroundColor="#0F0F0F">

    <Grid Padding="14" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,*">

        <Border BackgroundColor="#1A1A1A"
                Stroke="#2B2B2B"
                StrokeThickness="1"
                StrokeShape="RoundRectangle 18"
                Padding="14">

            <VerticalStackLayout Spacing="12">

                <Label Text="Yeni Hizmet"
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="#F2F2F2"/>

                <Entry x:Name="txtAd"
                       Placeholder="Hizmet adı (örn: Saç Kesimi)"
                       TextColor="#F2F2F2"
                       PlaceholderColor="#777"
                       BackgroundColor="#232323"/>

                <Entry x:Name="txtSure"
                       Placeholder="Süre (dk) (örn: 20)"
                       Keyboard="Numeric"
                       TextColor="#F2F2F2"
                       PlaceholderColor="#777"
                       BackgroundColor="#232323"/>

                <Entry x:Name="txtFiyat"
                       Placeholder="Fiyat (örn: 150)"
                       Keyboard="Numeric"
                       TextColor="#F2F2F2"
                       PlaceholderColor="#777"
                       BackgroundColor="#232323"/>

                <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                    <Button Text="Kaydet" Clicked="Kaydet_Clicked"/>
                    <Button Grid.Column="1" Text="Vazgeç" Clicked="Vazgec_Clicked"/>
                </Grid>

            </VerticalStackLayout>
        </Border>

    </Grid>
</ContentPage>