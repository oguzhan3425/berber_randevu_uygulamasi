<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="berber_randevu_uygulamasi.Views.AltBarlar.SifreDegistirSayfasi"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:altbar="clr-namespace:berber_randevu_uygulamasi.Views.AltBarlar"
    Title="Şifreyi Değiştir"
    BackgroundColor="#0F0F0F">

    <Grid RowDefinitions="*,Auto">

        <ScrollView Grid.Row="0">
            <VerticalStackLayout Padding="20" Spacing="14">

                <Label Text="Güncel Şifre" TextColor="#F2F2F2" FontSize="14"/>
                <Entry x:Name="GuncelSifreEntry"
                       Placeholder="Mevcut şifre"
                       IsPassword="True"
                       BackgroundColor="#1A1A1A"
                       TextColor="White"
                       PlaceholderColor="#777"
                       HeightRequest="50"/>

                <Label Text="Yeni Şifre" TextColor="#F2F2F2" FontSize="14"/>
                <Entry x:Name="YeniSifreEntry"
                       Placeholder="Yeni şifre"
                       IsPassword="True"
                       BackgroundColor="#1A1A1A"
                       TextColor="White"
                       PlaceholderColor="#777"
                       HeightRequest="50"/>

                <Label Text="Yeni Şifre (Tekrar)" TextColor="#F2F2F2" FontSize="14"/>
                <Entry x:Name="YeniSifreTekrarEntry"
                       Placeholder="Yeni şifre tekrar"
                       IsPassword="True"
                       BackgroundColor="#1A1A1A"
                       TextColor="White"
                       PlaceholderColor="#777"
                       HeightRequest="50"/>

                <!-- BUTONLAR -->
                <Grid ColumnDefinitions="*,*" ColumnSpacing="12" Margin="0,18,0,0">
                    <Button Grid.Column="0"
                            Text="Şifreyi Güncelle"
                            BackgroundColor="#FF8A00"
                            TextColor="White"
                            HeightRequest="55"
                            CornerRadius="14"
                            Clicked="SifreGuncelle_Clicked"/>

                    <Button Grid.Column="1"
                            Text="Geri Dön"
                            BackgroundColor="#232323"
                            TextColor="#F2F2F2"
                            HeightRequest="55"
                            CornerRadius="14"
                            Clicked="GeriDon_Clicked"/>
                </Grid>

                <BoxView HeightRequest="10" Opacity="0"/>
            </VerticalStackLayout>
        </ScrollView>

        <!-- ALT BAR (opsiyonel) -->
        <Grid Grid.Row="1" x:Name="BottomBarHost" IsVisible="False">
            <altbar:BerberAltBar x:Name="barBerber" IsVisible="False"/>
            <altbar:CalisanAltBar x:Name="barCalisan" IsVisible="False"/>
        </Grid>

    </Grid>
</ContentPage>
