<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="berber_randevu_uygulamasi.Views.AltBarlar.SifreDegistirSayfasi"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Şifreyi Değiştir"
    BackgroundColor="#0F0F0F">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="14">

            <Label Text="Güncel Şifre" TextColor="#F2F2F2" FontSize="14"/>
            <Entry x:Name="GuncelSifreEntry" Placeholder="Mevcut şifre"
                   IsPassword="True" BackgroundColor="#1A1A1A"
                   TextColor="White" PlaceholderColor="#777" HeightRequest="50"/>

            <Label Text="Yeni Şifre" TextColor="#F2F2F2" FontSize="14"/>
            <Entry x:Name="YeniSifreEntry" Placeholder="Yeni şifre"
                   IsPassword="True" BackgroundColor="#1A1A1A"
                   TextColor="White" PlaceholderColor="#777" HeightRequest="50"/>

            <Label Text="Yeni Şifre (Tekrar)" TextColor="#F2F2F2" FontSize="14"/>
            <Entry x:Name="YeniSifreTekrarEntry" Placeholder="Yeni şifre tekrar"
                   IsPassword="True" BackgroundColor="#1A1A1A"
                   TextColor="White" PlaceholderColor="#777" HeightRequest="50"/>

            <Button Text="Şifreyi Güncelle"
                    BackgroundColor="#FF8A00" TextColor="White"
                    HeightRequest="55" CornerRadius="14"
                    Margin="0,18,0,0"
                    Clicked="SifreGuncelle_Clicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>