<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="berber_randevu_uygulamasi.Views.ProfilDuzenleSayfasi"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Profil"
    BackgroundColor="#0F0F0F">

    <Grid RowDefinitions="*,Auto">

        <!-- ÜST İÇERİK -->
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Padding="16" Spacing="14">

                <!-- Profil Foto + küçük düzenle ikonu -->
                <Grid HorizontalOptions="Center" Margin="0,10,0,6">
                    <!-- Daire profil foto (Frame yerine Border) -->
                    <Border WidthRequest="120"
                            HeightRequest="120"
                            BackgroundColor="#1A1A1A"
                            StrokeThickness="0"
                            StrokeShape="RoundRectangle 60">
                        <Image x:Name="imgProfil"
                               Source="default_user.png"
                               Aspect="AspectFill"
                               HeightRequest="96"
                               WidthRequest="96"/>
                    </Border>

                    <!-- Sağ-alt küçük edit balonu -->
                    <Border WidthRequest="34"
                            HeightRequest="34"
                            BackgroundColor="#FF8A00"
                            StrokeThickness="0"
                            StrokeShape="RoundRectangle 17"
                            HorizontalOptions="End"
                            VerticalOptions="End"
                            Margin="0,0,-6,-6">

                        <Grid>
                            <Image Source="edit.png"
                                   WidthRequest="18"
                                   HeightRequest="18"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center" />
                        </Grid>

                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="ProfilFotoDegistir_Tapped" />
                        </Border.GestureRecognizers>
                    </Border>
                </Grid>

                <Label Text="Ayarlar"
                       TextColor="#F2F2F2"
                       FontAttributes="Bold"
                       FontSize="18"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"
                       Margin="0,8,0,0"/>
                <!-- Ayarlar kartı (Frame yerine Border) -->
                <Border BackgroundColor="#161616"
                        StrokeThickness="0"
                        StrokeShape="RoundRectangle 16"
                        Padding="0">

                    <VerticalStackLayout Spacing="0">

                        <!-- Şifre -->
                        <Grid Padding="14" ColumnDefinitions="*,Auto">
                            <Label Text="Şifreyi Değiştir"
                                   TextColor="#F2F2F2"
                                   FontSize="16" />
                            <Label Grid.Column="1"
                                   Text="›"
                                   TextColor="#8A8A8A"
                                   FontSize="22"
                                   VerticalTextAlignment="Center" />
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Tapped="SifreDegistir_Tapped" />
                            </Grid.GestureRecognizers>
                        </Grid>

                        <BoxView HeightRequest="1" BackgroundColor="#262626"/>

                        <!-- Profil Foto -->
                        <Grid Padding="14" ColumnDefinitions="*,Auto">
                            <Label Text="Profil Fotoğrafı Değiştir"
                                   TextColor="#F2F2F2"
                                   FontSize="16" />
                            <Label Grid.Column="1"
                                   Text="›"
                                   TextColor="#8A8A8A"
                                   FontSize="22"
                                   VerticalTextAlignment="Center" />
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Tapped="ProfilFotoDegistir_Tapped" />
                            </Grid.GestureRecognizers>
                        </Grid>

                        <BoxView HeightRequest="1" BackgroundColor="#262626"/>

                        <!-- Telefon -->
                        <Grid Padding="14" ColumnDefinitions="*,Auto">
                            <Label Text="Telefon Numarasını Değiştir"
                                   TextColor="#F2F2F2"
                                   FontSize="16" />
                            <Label Grid.Column="1"
                                   Text="›"
                                   TextColor="#8A8A8A"
                                   FontSize="22"
                                   VerticalTextAlignment="Center" />
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Tapped="TelefonDegistir_Tapped" />
                            </Grid.GestureRecognizers>
                        </Grid>

                    </VerticalStackLayout>
                </Border>

            </VerticalStackLayout>
        </ScrollView>

        <!-- ALT BAR (4 ikon) -->
        <Grid Grid.Row="1"
              BackgroundColor="#0B0B0B"
              Padding="18,10"
              ColumnDefinitions="*,*,*">

            <ImageButton Grid.Column="0"
                         Source="home.png"
                         BackgroundColor="Transparent"
                         HeightRequest="26"
                         WidthRequest="26"
                         Clicked="AnaSayfaClicked" />

            <ImageButton Grid.Column="1"
                         Source="scissors.png"
                         BackgroundColor="Transparent"
                         HeightRequest="26"
                         WidthRequest="26"
                         Clicked="RandevularClicked" />

            <ImageButton Grid.Column="3"
                         Source="profil.png"
                         BackgroundColor="Transparent"
                         HeightRequest="26"
                         WidthRequest="26"
                         Clicked="ProfilClicked" />
        </Grid>

    </Grid>
</ContentPage>
