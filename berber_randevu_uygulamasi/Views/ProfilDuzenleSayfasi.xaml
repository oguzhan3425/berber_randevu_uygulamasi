<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="berber_randevu_uygulamasi.Views.ProfilDuzenleSayfasi"
             BackgroundColor="#F6EEDD">

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- ÜST KISIM (boş bırakılabilir veya başlık eklenebilir) -->
        <Grid Grid.Row="0" HeightRequest="10"/>

        <!-- ORTA KISIM (ScrollView içinde form) -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20" Spacing="20">

                <!-- PROFİL FOTO -->
                <Grid HorizontalOptions="Center">
                    <Border HeightRequest="110"
                            WidthRequest="110"
                            StrokeThickness="0"
                            StrokeShape="RoundRectangle 100">
                        <Image Source="pp.png" Aspect="AspectFill"/>
                    </Border>
                </Grid>

                <!-- FOTOĞRAFI DEĞİŞTİR -->
                <Border BackgroundColor="#3A2A1A"
                        StrokeThickness="0"
                        StrokeShape="RoundRectangle 24"
                        Padding="12"
                        HorizontalOptions="Center"
                        WidthRequest="240">
                    <Label Text="Fotoğrafı Değiştir"
                           TextColor="White"
                           FontSize="18"
                           HorizontalOptions="Center"/>
                </Border>


                <!-- AD -->
                <Label Text="Ad"
                       FontSize="17"
                       FontAttributes="Bold"
                       TextColor="Black"/>
                <Border Stroke="#3A2A1A"
                        StrokeThickness="2"
                        StrokeShape="RoundRectangle 16"
                        BackgroundColor="#F9F0DD"
                        Padding="10">
                    <Entry x:Name="AdEntry"
                           Placeholder="Ad"
                           FontSize="16"
                           BackgroundColor="Transparent"/>
                </Border>

                <!-- SOYAD -->
                <Label Text="Soyad"
                       FontSize="17"
                       FontAttributes="Bold"
                       TextColor="Black"/>
                <Border Stroke="#3A2A1A"
                        StrokeThickness="2"
                        StrokeShape="RoundRectangle 16"
                        BackgroundColor="#F9F0DD"
                        Padding="10">
                    <Entry x:Name="SoyadEntry"
                           Placeholder="Soyad"
                           FontSize="16"
                           BackgroundColor="Transparent"/>
                </Border>

                <!-- E POSTA -->
                <Label Text="E-posta"
                       FontSize="17"
                       FontAttributes="Bold"
                       TextColor="Black"/>
                <Border Stroke="#3A2A1A"
                        StrokeThickness="2"
                        StrokeShape="RoundRectangle 16"
                        BackgroundColor="#F9F0DD"
                        Padding="10">
                    <Entry x:Name="EpostaEntry"
                           Placeholder="E-posta"
                           FontSize="16"
                           BackgroundColor="Transparent"/>
                </Border>

                <!-- TELEFON -->
                <Label Text="Telefon"
                       FontSize="17"
                       FontAttributes="Bold"
                       TextColor="Black"/>
                <Border Stroke="#3A2A1A"
                        StrokeThickness="2"
                        StrokeShape="RoundRectangle 16"
                        BackgroundColor="#F9F0DD"
                        Padding="10">
                    <Entry x:Name="TelefonEntry"
                           Placeholder="+90 555 555 55 55"
                           FontSize="16"
                           BackgroundColor="Transparent"/>
                </Border>

                <!-- GÜNCELLE BUTONU -->
                <Border BackgroundColor="#3A2A1A"
                        StrokeThickness="0"
                        StrokeShape="RoundRectangle 24"
                        Padding="14"
                        Margin="0,10,0,20">
                    <Label Text="Güncelle"
                           TextColor="White"
                           FontSize="18"
                           HorizontalOptions="Center"/>
                </Border>

            </VerticalStackLayout>
        </ScrollView>


        <!-- ALT BAR -->
        <Grid Grid.Row="2"
              BackgroundColor="#3A2A1A"
              HeightRequest="65"
              ColumnDefinitions="*,*,*">

            <!-- Ana Sayfa -->
            <ImageButton Grid.Column="0"
                         Source="home.png"
                         BackgroundColor="Transparent"
                         HeightRequest="35"
                         WidthRequest="35"
                         HorizontalOptions="Center"
                         VerticalOptions="Center"
                         Clicked="AnaSayfaClicked"/>

            <!-- Randevu Al -->
            <ImageButton Grid.Column="1"
                         Source="scissors.png"
                         BackgroundColor="Transparent"
                         HeightRequest="35"
                         WidthRequest="35"
                         HorizontalOptions="Center"
                         VerticalOptions="Center"
                         Clicked="RandevuAlClicked"/>

            <!-- Profil (aktif sayfa) -->
            <ImageButton Grid.Column="2"
                         Source="user.png"
                         BackgroundColor="Transparent"
                         HeightRequest="35"
                         WidthRequest="35"
                         HorizontalOptions="Center"
                         VerticalOptions="Center"/>

        </Grid>

    </Grid>
</ContentPage>
