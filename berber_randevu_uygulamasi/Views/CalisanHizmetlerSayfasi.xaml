<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:altbar="clr-namespace:berber_randevu_uygulamasi.Views.AltBarlar"
             xmlns:models="clr-namespace:berber_randevu_uygulamasi.Models"
             x:Class="berber_randevu_uygulamasi.Views.CalisanHizmetlerSayfasi"
             Title="Hizmetler"
             BackgroundColor="#0F0F0F">

    <Grid RowDefinitions="Auto,*,Auto" Padding="12" RowSpacing="12">

        <!-- Üst başlık -->
        <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Padding="0,6">
            <VerticalStackLayout Spacing="2">
                <Label Text="Hizmetler" FontSize="18" FontAttributes="Bold" TextColor="#F2F2F2"/>
                <Label Text="Fiyat ve süre bilgileri" FontSize="12" TextColor="#BDBDBD"/>
            </VerticalStackLayout>
            <Button Grid.Column="1" Text="ℹ️" FontSize="18"
                    BackgroundColor="Transparent" TextColor="#F2F2F2"/>
        </Grid>

        <!-- Liste -->
        <CollectionView Grid.Row="1" ItemsSource="{Binding Hizmetler}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Hizmet">
                    <Border BackgroundColor="#1A1A1A"
                            Stroke="#2B2B2B"
                            StrokeShape="RoundRectangle 18"
                            Padding="14"
                            Margin="0,0,0,10">
                        <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
                            <Label Text="{Binding HizmetAdi}"
                                   FontAttributes="Bold"
                                   FontSize="16"
                                   TextColor="#F2F2F2"/>
                            <Label Grid.Column="1"
                                   Text="{Binding Fiyat, StringFormat='{0:0} ₺'}"
                                   FontAttributes="Bold"
                                   FontSize="16"
                                   TextColor="#F2F2F2"
                                   HorizontalTextAlignment="End"/>

                            <Label Grid.Row="1"
                                   Text="{Binding SureDakika, StringFormat='{0} dk'}"
                                   FontSize="12"
                                   TextColor="#BDBDBD"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- ✅ Alt bar: Koleksiyonun içinde değil, Grid'in 3. satırında -->
        <altbar:CalisanAltBar Grid.Row="2"/>
    </Grid>
</ContentPage>