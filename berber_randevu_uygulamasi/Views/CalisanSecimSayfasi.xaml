<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="berber_randevu_uygulamasi.Views.CalisanSecimSayfasi"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Çalışan Seç"
    BackgroundColor="#0F0F0F">

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- ÜST BAR -->
        <Grid Padding="12,10" ColumnDefinitions="*,Auto">
            <Label Text="Çalışan Seç"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="#F2F2F2" />
        </Grid>

        <!-- İnce çizgi -->
        <BoxView Grid.Row="0"
                 HeightRequest="1"
                 BackgroundColor="#1E1E1E"
                 VerticalOptions="End" />

        <!-- LİSTE -->
        <CollectionView Grid.Row="1"
                        x:Name="CalisanCollection"
                        Margin="12,10"
                        SelectionMode="Single"
                        SelectionChanged="CalisanCollection_SelectionChanged">

            <CollectionView.EmptyView>
                <VerticalStackLayout Padding="20" Spacing="8"
                                     HorizontalOptions="Center"
                                     VerticalOptions="Center">
                    <Label Text="Bu berbere ait çalışan bulunamadı"
                           TextColor="#BDBDBD"
                           FontSize="14"
                           HorizontalTextAlignment="Center" />
                </VerticalStackLayout>
            </CollectionView.EmptyView>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Stroke="#262626"
                            StrokeThickness="1"
                            BackgroundColor="#151515"
                            Padding="12"
                            Margin="0,6">

                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="18" />
                        </Border.StrokeShape>

                        <Grid ColumnDefinitions="60,*,Auto"
                              ColumnSpacing="12"
                              VerticalOptions="Center">

                            <!-- Profil Foto (yuvarlak) -->
                            <Border HeightRequest="52"
                                    WidthRequest="52"
                                    BackgroundColor="#222222"
                                    StrokeThickness="0"
                                    HorizontalOptions="Start"
                                    VerticalOptions="Center">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="26" />
                                </Border.StrokeShape>

                                <Image Source="{Binding Foto}"
                                       Aspect="AspectFill" />
                            </Border>

                            <!-- Ad Soyad -->
                            <VerticalStackLayout Grid.Column="1"
                                                 Spacing="2"
                                                 VerticalOptions="Center">
                                <Label Text="{Binding Ad}"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="#F2F2F2" />
                                <Label Text="{Binding Soyad}"
                                       FontSize="13"
                                       TextColor="#BDBDBD" />
                                <!-- Uzmanlık/Deneyim kullanıyorsan aç -->
                                <!--
                                <Label Text="{Binding Uzmanlik}"
                                       FontSize="12"
                                       TextColor="#8E8E8E" />
                                -->
                            </VerticalStackLayout>

                            <!-- Sağ ok -->
                            <Label Grid.Column="2"
                                   Text="›"
                                   FontSize="24"
                                   TextColor="#BDBDBD"
                                   VerticalOptions="Center" />

                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- ALT BAR varsa buraya eklersin -->
        <!-- <altbar:AltBar Grid.Row="2" /> -->

    </Grid>
</ContentPage>