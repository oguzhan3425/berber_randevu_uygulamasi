<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="berber_randevu_uygulamasi.Views.CalisanAnaSayfa"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:altbar="clr-namespace:berber_randevu_uygulamasi.Views.AltBarlar"
    Title="Ana Sayfa"
    BackgroundColor="#0F0F0F">

    <Grid RowDefinitions="*,Auto">
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Padding="12,10" Spacing="12">

                <!-- Üst Profil Kartı (ÇALIŞAN - TEK KİŞİ) -->
                <Border BackgroundColor="#1A1A1A"
                        Stroke="#2B2B2B"
                        StrokeShape="RoundRectangle 18"
                        Padding="14">

                    <Grid ColumnDefinitions="Auto,*"
                          RowDefinitions="Auto"
                          VerticalOptions="Center">

                        <!-- SOL: Çalışan Foto -->
                        <Image x:Name="imgCalisanFoto"
                               WidthRequest="52"
                               HeightRequest="52"
                               Aspect="AspectFill"
                               Source="default_user.png">
                            <Image.Clip>
                                <EllipseGeometry Center="26,26"
                                                 RadiusX="26"
                                                 RadiusY="26"/>
                            </Image.Clip>
                        </Image>

                        <!-- ORTA: Çalışan Ad / Bilgi -->
                        <VerticalStackLayout Grid.Column="1" Margin="12,0,0,0" Spacing="2">
                            <Label x:Name="lblCalisanAdSoyad"
                                   Text="—"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="#F2F2F2"/>

                            <!-- İstersen rol/şube gibi kısa bilgi -->
                            <Label x:Name="lblCalisanBilgi"
                                   Text="Çalışan"
                                   FontSize="12"
                                   TextColor="#BDBDBD"/>
                        </VerticalStackLayout>

                    </Grid>
                </Border>

                <!-- Bugün Özet -->
                <Border BackgroundColor="#1A1A1A"
                        Stroke="#2B2B2B"
                        StrokeThickness="1"
                        StrokeShape="RoundRectangle 18"
                        Padding="14">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Bugün"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="#F2F2F2"/>

                        <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                            <Border BackgroundColor="#232323"
                                    StrokeThickness="0"
                                    StrokeShape="RoundRectangle 14"
                                    Padding="12">
                                <VerticalStackLayout Spacing="2">
                                    <Label Text="Randevu"
                                           FontSize="12"
                                           TextColor="#BDBDBD"/>
                                    <Label x:Name="lblBugunRandevu"
                                           Text="0"
                                           FontSize="24"
                                           FontAttributes="Bold"
                                           TextColor="#F2F2F2"/>
                                </VerticalStackLayout>
                            </Border>

                            <Border Grid.Column="1"
                                    BackgroundColor="#232323"
                                    StrokeThickness="0"
                                    StrokeShape="RoundRectangle 14"
                                    Padding="12">
                                <VerticalStackLayout Spacing="2">
                                    <Label Text="Sıradaki"
                                           FontSize="12"
                                           TextColor="#BDBDBD"/>
                                    <Label x:Name="lblSiradakiIsim"
                                           Text="—"
                                           FontAttributes="Bold"
                                           TextColor="#F2F2F2"/>
                                    <Label x:Name="lblSiradakiSaat"
                                           Text="—"
                                           FontSize="12"
                                           TextColor="#BDBDBD"/>
                                </VerticalStackLayout>
                            </Border>
                        </Grid>

                        <!-- Kart butonlar -->
                        <Grid ColumnDefinitions="*,*" ColumnSpacing="10">

                            <Border BackgroundColor="#232323"
                                    Stroke="#2B2B2B"
                                    StrokeThickness="1"
                                    StrokeShape="RoundRectangle 14"
                                    Padding="12">
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="BugunRandevular_Tapped"/>
                                </Border.GestureRecognizers>
                                <Label Text="Bugün Randevular"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"
                                       TextColor="#F2F2F2"
                                       FontAttributes="Bold"/>
                            </Border>

                            <Border Grid.Column="1"
                                    BackgroundColor="#232323"
                                    Stroke="#2B2B2B"
                                    StrokeThickness="1"
                                    StrokeShape="RoundRectangle 14"
                                    Padding="12">
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="CalismaSaatleri_Tapped"/>
                                </Border.GestureRecognizers>
                                <Label Text="Çalışma Saatleri"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"
                                       TextColor="#F2F2F2"
                                       FontAttributes="Bold"/>
                            </Border>

                        </Grid>
                    </VerticalStackLayout>
                </Border>

                <!-- Uyarılar -->
                <Border BackgroundColor="#1A1A1A"
                        Stroke="#2B2B2B"
                        StrokeThickness="1"
                        StrokeShape="RoundRectangle 18"
                        Padding="14">
                    <VerticalStackLayout Spacing="6">
                        <Label Text="Uyarılar"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="#F2F2F2"/>
                        <Label x:Name="lblUyari1"
                               Text="• Bugün iptal edilen randevu yok."
                               FontSize="12"
                               TextColor="#BDBDBD"/>
                        <Label x:Name="lblUyari2"
                               Text="• 15 dk içinde randevu: yok."
                               FontSize="12"
                               TextColor="#BDBDBD"/>
                    </VerticalStackLayout>
                </Border>

            </VerticalStackLayout>
        </ScrollView>

        <!-- ALT BAR (sende adı farklıysa değiştir) -->
        <altbar:CalisanAltBar Grid.Row="1"/>
    </Grid>
</ContentPage>
